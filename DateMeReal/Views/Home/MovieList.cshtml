@{
    ViewData["Title"] = "Movie List";
}

@model List<ApplicationEntry>
    <!--Pull in list compilation-->

<nav>
    <h2>Joel's Movies</h2>
    <ul>
        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li><a asp-controller="Home" asp-action="Podcast">My Podcasts</a></li>
        <li><a asp-controller="Home" asp-action="Application">Enter A Movie</a></li>
    </ul>
</nav>

<div class="grid-container">
    <h1>Movie List</h1>
</div>

<table class="table table-border table-striped">
    <!--print the table headers-->
    <thead class="font-weight-bold">
        <tr>
            <td>Movie Name</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Lent to</td>
            <td>Edited</td>
            <td>Notes</td>
        </tr>
    </thead>
    <!--autofill the rows in the table-->
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.MovieName</td>
                <td>@x.Category.CategoryName</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.LentTo</td>
                <td>@x.Edited</td>
                <td>@x.Notes</td>

                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.EntryId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.EntryId">Delete</a></td>
            </tr>
        }

    </tbody>

</table>