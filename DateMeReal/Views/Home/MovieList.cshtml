@{
    ViewData["Title"] = "Movie List";
}

@model List<ApplicationEntry> 
    <!--Pull in list compilation-->

<table class="table table-border table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Movie Name</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Lent to</td>
            <td>Edited</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
        <tr>
            <td>@x.MovieName</td>
            <td>@x.Category.CategoryName</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.LentTo</td>
            <td>@x.Edited</td>
            <td>@x.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.EntryId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.EntryId">Delete</a></td>
        </tr>
            }

    </tbody>

</table>