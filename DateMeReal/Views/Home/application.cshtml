@{
    ViewData["Title"] = "Entries";
}

@model DateMeReal.Models.ApplicationEntry

    <nav>
        <h2>Joel's Movies</h2>
        <ul>
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Home" asp-action="Podcast">My Podcasts</a></li>
            <li><a href="#">Enter A Movie</a></li>
        </ul>
    </nav>

<div class="grid-container">
    <h1>Enter a Movie</h1>
</div>

<div class="grid-container form">
    <form method="post">
        <label asp-for="MovieName">Movie Name:</label>
        <input asp-for="MovieName" /><br />

        <label asp-for="Category">Category:</label>
        <input asp-for="Category" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Movie Rating:</label>
        <select asp-for="Rating">
            <option value="R">R</option>
            <option value="13">PG-13</option>
            <option value="PG">PG</option>
            <option value="G">G</option>
            <option value="NR">NR</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" /><br />

        <button type="submit">Submit Entry</button>
    </form>
</div>
